<p id="notice"><%= notice %></p>

<h1>Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
        <div class="card">
            <div class="card-body">
                <ul>
                    <li><%= funcionario.nome %></li>
                    <li><%= funcionario.cargo %></li>
                    <li><%= funcionario.cpf %></li>
                    <li>Endere√ßo</li>
                    <ul>
                        <li><%= funcionario.endereco.logradouro %></li>
                        <li><%= funcionario.endereco.cidade %></li>
                        <li><%= funcionario.endereco.estado %></li>
                        <li><%= funcionario.endereco.numero %></li>
                    </ul>
                    <li>Telefones</li>
                    <ul>
                    <% funcionario.telefones.each do |telefone| %>
                        <li><%= telefone.numero %></li>
                    <% end %>
                    </ul>
                </ul>
                <tr>
                    <td><%= link_to 'Show', funcionario %></td>
                    <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
                    <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            </div>
        </div>

    <% end %>
  </tbody>
</table>

